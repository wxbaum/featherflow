{
    "name": "stock_analysis_flow",
    "description": "Stock market data analysis and signal generation",
    "version": "1.0",
    "tasks": [
      {
        "id": "download_stock_data",
        "script": "download_data.py",
        "description": "Download historical stock price data",
        "args": {
          "symbol": "AAPL",
          "days": "90",
          "output": "data/stock_prices.csv"
        }
      },
      {
        "id": "calculate_indicators",
        "script": "calculate_indicators.py",
        "description": "Calculate technical indicators from stock data",
        "depends_on": ["download_stock_data"],
        "args": {
          "input": "data/stock_prices.csv",
          "output": "data/indicators.csv"
        }
      },
      {
        "id": "generate_signals",
        "script": "generate_signals.py",
        "description": "Generate trading signals based on indicators",
        "depends_on": ["calculate_indicators"],
        "args": {
          "indicators": "data/indicators.csv",
          "output": "data/signals.csv",
          "strategy": "sma_crossover"
        },
        "env": {
          "RISK_TOLERANCE": "medium"
        }
      },
      {
        "id": "backtest_strategy",
        "script": "backtest.py",
        "description": "Run backtest on generated signals",
        "depends_on": ["generate_signals"],
        "args": [
          "--signals", "data/signals.csv",
          "--prices", "data/stock_prices.csv",
          "--report", "reports/backtest_results.json",
          "--initial-capital", "10000"
        ]
      },
      {
        "id": "create_summary_report",
        "script": "create_report.py",
        "description": "Create a summary report of results",
        "depends_on": ["backtest_strategy"],
        "args": {
          "backtest": "reports/backtest_results.json",
          "signals": "data/signals.csv",
          "output": "reports/summary_report.html"
        }
      }
    ],
    "params": {
      "symbol": "AAPL",
      "start_date": "2023-01-01"
    }
  }